# PostgreSQL username
PG_USER=your_pg_username
# PostgreSQL password
PG_PASSWORD=your_pg_password
# Database host
PG_HOST=localhost
# Database port
PG_PORT=5432
# Database name
PG_DATABASE=mj_fb_db
# Secret used for signing JWT tokens
# Generate a strong random value, e.g.:
#   openssl rand -hex 32
JWT_SECRET=
# Secret used for signing refresh JWT tokens
JWT_REFRESH_SECRET=
# Allowed frontend origins for CORS (comma separated)
# Include both localhost and 127.0.0.1 for local development
FRONTEND_ORIGIN=http://localhost:5173,http://127.0.0.1:5173
# Server port
PORT=4000
# Power Automate HTTP trigger URL
POWER_AUTOMATE_URL=https://your_flow_url
# Optional key or code for the flow
POWER_AUTOMATE_KEY=your_flow_key
