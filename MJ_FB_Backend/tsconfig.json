{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "types/**/*.d.ts"
  ],
  "ts-node": {
    "files": true
  },
  "exclude": [
    "src/migrations"
  ]
}